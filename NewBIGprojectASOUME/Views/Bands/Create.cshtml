@model NewBIGprojectASOUME.BandFormViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Bands"))
{
    <div class="form-group">
        @Html.LabelFor(m => m)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Genres)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @*@Html.LabelFor(m => m.Artists)*@
        @Html.DropDownListFor(m=>m.Artist.FullName, new SelectList(Model.Artists,"Id","FullName"), "Select Artist", new { @class="form-control"})
    </div>

}