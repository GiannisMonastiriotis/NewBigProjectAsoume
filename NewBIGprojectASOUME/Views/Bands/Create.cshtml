@model NewBIGprojectASOUME.BandFormViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Bands"))
{
    <div class="form-group">
        @Html.LabelFor(m => m)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Artist)
        @Html.DropDownListFor(m=>m.Artist, new SelectList(Model.Artists,"Id","FullName"), "Select Artist", new { @class="form-control"})
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}